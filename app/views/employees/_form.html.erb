<div class="col-xs-12">
<%= simple_form_for(employee) do |f| %>

  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12">Employees</div>
  </div>
  
   <div class="row">
        <div class="col-xs-4">
              <div class="form-group">
                <%= f.label :employee_code%>
                <%= f.number_field :employee_code, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.label :employee_id  %>
                <%= f.number_field :employee_id, class:"form-control"  %>
              </div>
            
              <div class="form-group ">
                <%= f.label :prefix %>
                <%= f.text_field :prefix, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class:"form-control"  %>
              </div>

        </div>
        <div class="col-xs-4">
              <div class="form-group">
                <%= f.input :emp_mode, class:"form-control", collection: [ "Permanent", "Temporary","Contract"], selected: ["Permanent"]  %>
              </div>
            
              <div class="form-group">
                <%= f.label :role %>
                <%= f.text_field :role, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.input :email, class:"form-control", input_html: { autocomplete: 'email' } %> 
              </div>
            
              <div class="form-group">
                <%= f.label :department %>
                <%= f.text_field :department, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.label :reporting_manager %>
                <%= f.text_field :reporting_manager, class:"form-control"  %>
              </div>
            
      
        </div>
        <div class="col-xs-4">
              <div class="form-group">
                <%= f.label :job_title %>
                <%= f.text_field :job_title, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.label :exprerience %>
                <%= f.text_area :exprerience, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.label :tel %>
                <%= f.number_field :tel, class:"form-control"  %>
              </div>
            
              <div class="form-group">
                <%= f.input :status, class:"form-control", collection: [ "Active", "Archived"], selected: ["Active"] %>
              </div>
            
              <div class="actions" "btn-primary">
                <%= f.submit %>
              </div>
            <% end %>
        </div>
            
  </div>
  

